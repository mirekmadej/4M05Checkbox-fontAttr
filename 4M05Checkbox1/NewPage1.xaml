<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_4M05Checkbox1.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            x:Name="lblTest"
            />
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="chkBoldChecked"
                
                />
            <Label
                Text="pogrubiony"
                />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="chkItalicChecked"
                
                />
            <Label
                Text="pokrzywiony"
                />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="chkBoldItalicChecked"
                
                />
            <Label
                Text="pokrzywiony i pogrubiony"
                />
        </HorizontalStackLayout>
            
    </VerticalStackLayout>
</ContentPage>